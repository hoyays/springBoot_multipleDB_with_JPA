/* write css start */
#write_area{
	width: 1200px;
	margin: 0 auto;
	margin-top: 40px;
	/* border: 1px solid black; */
}
table{
	width: 100%;
	margin: 0 auto;
	border-collapse: collapse;
}
th{
	height: 50px;
	background: #f3f4f5;
	font-size: 18px;
	color: #252525;
	padding: 15px 0;
	border-bottom: 1px solid #252525;
	box-sizing: border-box;
}
td{
	height: 50px;
	text-align: center;
	font-size: 16px;
	color: #252525;
	padding: 15px 0;
	box-sizing: border-box;
	border-bottom: 1px solid #252525;
}
tbody input{
	width: 98%;
	height: 40px;
}
#btn_area{
	width: 1200px;
	margin: 0 auto;
	border: 1px solid black;
}
