@charset "UTF-8";
*{
	margin: 0;
	padding: 0;
}
html, body{
	height: 100%;
}
#title_area{
	width: 1200px;
	height: 100px;
	margin: 0 auto;
	box-sizing: border-box;
	margin-top: 30px;
	padding-top: 5px;
	padding-bottom: 25px;
	border-bottom: 4px solid #2e3238;
	/* border: 1px solid red; */
}
#title_area p{
	font-size: 24px;
	font-weight: bold;
	text-align: center;
}
input:focus::-webkit-input-placeholder {
	color:transparent; 
}

